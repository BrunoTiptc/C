#include <stdio.h>
#include <stdlib.h>

int xi;
int*ptr_xi;

int main()
{
 xi = 10;
 ptr_xi = &xi;
 imprimir();

 ("PAUSE>>null");

    return 0;
}


void imprimir () {

    printf("Valor de xi = %d  \n", xi);
    printf("Valor de &xi = %p \n", &xi);
    printf("Valor de ptr_xi = %p \n", ptr_xi);
    printf("Valor de ptr_xi = %d \n\n",*ptr_xi  );
}
